{
    "name" : "noplanman/xec",
    "type" : "library",
    "description" : "Use any command via PHP.",
    "keywords" : [
        "execute",
        "exec",
        "command",
        "command-line",
        "shell",
        "timeout"
    ],
    "homepage" : "http://github.com/noplanman/Xec",
    "license" : "MIT",
    "support" : {
        "issues" : "https://github.com/noplanman/Xec/issues",
        "source" : "https://github.com/noplanman/Xec"
    },
    "authors" : [
        {
            "name" : "Armando LÃ¼scher",
            "email" : "armando@noplanman.ch",
            "homepage" : "https://noplanman.ch",
            "role" : "Developer"
        }
    ],
    "require" : {
        "php" : "^7.0"
    },
    "require-dev" : {
        "phpunit/phpunit" : "^6.0",
        "jakub-onderka/php-parallel-lint" : "^0.9.2",
        "squizlabs/php_codesniffer" : "^2.8"
    },
    "autoload" : {
        "psr-4" : {
            "NPM\\Xec\\" : "src"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "NPM\\Xec\\Tests\\" : "tests"
        }
    },
    "scripts" : {
        "check-code" : [
            "vendor/bin/phpcs --standard=ruleset.xml --extensions=php --encoding=utf-8 --report-width=150 -snp src tests",
            "vendor/bin/parallel-lint src tests"
        ],
        "test" : [
            "@check-code",
            "vendor/bin/phpunit"
        ],
        "test-cov" : [
            "@check-code",
            "vendor/bin/phpunit --coverage-clover=coverage.xml"
        ]
    }
}
